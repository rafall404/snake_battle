<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.snake_battle">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.scoreboard.ScoreBoardActivity" />
        <activity android:name=".activities.game.InGameActivity" />
        <activity
            android:name=".activities.game_setup_main.NewGameActivity"
            android:parentActivityName=".activities.game_setup_main.GameTypeActivity" />
        <activity
            android:name=".activities.game_setup_main.GameTypeActivity"
            android:parentActivityName=".activities.game_setup_main.NicknameMainActivity" />
        <activity android:name=".activities.game_setup_main.NicknameMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>